<% if @chefs.blank? %>
<p>There are not any books currently in the system.</p>
<% else %>
<p>These are the current books in our system</p>

<ul id = "chefs">
   <% @chefs.each do |c| %>
   <li><%= link_to c.first_name, {:action => 'show', :name => c.name} -%></li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new Book", {:action => 'new' }%></p>
